<dl id="TwitterWidgetPortlet" class="portlet TwitterWidgetPortlet" i18n:domain="collective.twitter.widget.portlets">

    <dt class="portletHeader">
      <span class="portletTopLeft"></span>
        <a class="tile" href="#TwitterWidgetPortlet">Twitter</a>
      <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
      <a class="twitter-timeline" tal:attributes="data-widget-id view/getDataId; href view/getUrl" tal:content="view/getText"></a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </dd>

    <dd class="portletFooter">
      <span class="portletBottomLeft"></span>
      <span class="portletBottomRight"></span>
    </dd>

</dl>
